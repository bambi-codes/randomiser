{
  "manifest_version": 3,
  "name": "Randomiser",
  "version": "0.1.0",
  "description": "Checks whether the current tab is on bambicloud.com.",
  "action": {
    "default_title": "Randomiser",
    "default_popup": "src/popup/index.html"
  },
  "permissions": ["tabs", "scripting", "storage"],
  "host_permissions": ["*://bambicloud.com/*", "*://*.bambicloud.com/*"],
  "content_scripts": [
    {
      "matches": ["*://bambicloud.com/*", "*://*.bambicloud.com/*"],
      "js": ["content.js"]
    }
  ]
}
